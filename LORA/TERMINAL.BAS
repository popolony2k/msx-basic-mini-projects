70 RATE = 9600
80 PRINT "Waiting for data"
90 CALL COMINI ("8N1NNNAN", RATE)
100 OPEN "COM:" AS #1
110 CALL COM(, GOSUB 180)
120 CALL COMON
130 C$=""
140 A$=INKEY$:C$=C$+A$:IF A$=CHR$(13) THEN PRINT " SENT =>" + CHR$(13) : GOTO 160
150 IF A$<>"" THEN PRINT A$;:GOTO 140 ELSE 140
160 PRINT #1,C$
170 GOTO 130
180 B$="":INPUT #1, B$
190 PRINT "RECV => ";B$
200 RETURN 140
210 PRINT "End of Transmission"
220 CLOSE #1
